{
    "compilerOptions": {
        "jsx": "react-jsx", // Enable JSX support
        "target": "es6",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": false,
        "allowJs": true, // Allow JavaScript for easier migration
        "outDir": "./public/js",
        "baseUrl": "./resources",
        "paths": {
            "@/*": ["js/*"]
        },
        "lib": ["dom", "es6"], // Use ES6 for compatibility
    },
    "exclude": ["node_modules"]
}
